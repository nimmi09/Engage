<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css_files/requests.css">
  <link rel="stylesheet" type="text/css"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
</head>
<body>
  <div class="full-page">
    <%- include('partials/header') %>
      <div class="container-login100">
        <div class="container">
          <% for (var i=0; i < requests.length ; i++) { %>
            <div class="box">
              <div class="name_job">
               <strong>Name : </strong> <%= requests[i].user_name %>
              </div>
              <p>
                <strong>Designation : </strong> <%= requests[i].user_designation %>
              </p>
              <div class="btns">
                <a href="/accept/<%= requests[i].type %>/<%=  requests[i].user_id %>">Accept</a>
                <a href="/reject/<%= requests[i].type %>/<%=  requests[i].user_id %>">Reject</a>
              </div>
            </div>
            <% } %>
        </div>
      </div>
  </div>
</body>
</html>