  <select class="input100"  name="category" id="category" onchange="showcategory(this.options[this.selectedIndex].value)" required>
    <option  selected="selected">Offence Category</option>
  
      <% for (var i = 0; i < category.length ; i++) { %>
       
          <option  value= "<%= category[i].category_name %>" > <%= category[i].category_name %> </option>
         
         
      <% } %>
     
  
  
   
   
    <option value="OtherCategory" >Other Category</option>
    </select>
    <div id="div1"></div>
</div>
          
<div class="wrap-input100 " >
  <select class="input100"  name="region" id="region" required>
    <option selected="selected">Region</option>
  
      <% for (var i = 0; i < locations.length ; i++) { %>
       
          <option value= "<%= locations[i].region%>"> <%= locations[i].region %> </option>
         
         
      <% } %>
     
  
 
  </select>
</div>
          
<div class="wrap-input100 " >
 
  <input class="input100" type="text" id="victim_age" name="victim_age"  placeholder="Victim Age" required>
</div>
<div class="wrap-input101 input102 " >
 Victim Gender
    <input  class="gender"  type="radio" name="victim_gender" value="Male" required> Male
<input class="gender_internal" type="radio" name="victim_gender" value="Female"> Female
<input class="gender_internal" type="radio" name="victim_gender" value="Other"> Other
</div>
   
   
<div class="container-login100-form-btn">
  <button class="login100-form-btn" type="submit">
    Report Offence
  </button>
</div>
    
 
 
</form>
</body>
</html>       
          
           
          
            
